{
  "name": "spark",
  "version": "0.1.0",
  "author": {
    "name": "Azat Hafizov",
    "email": "azat@optio.finance"
  },
  "repository": "https://github.com/optio-finance/spark-boilerplate",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "prepare": "husky install",
    "predev": "yarn run generate",
    "dev": "next dev",
    "prebuild": "yarn run generate",
    "build": "next build",
    "start": "next start",
    "start:ci": "INSECURE_AUTH=true yarn start",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
    "lint": "yarn run eslint . --ext .js,.jsx,.ts,.tsx",
    "generate": "yarn generate:prisma && yarn generate:graphql-codegen",
    "generate:prisma": "prisma generate",
    "generate:graphql-codegen": "graphql-codegen",
    "migrate": "yarn prisma migrate dev --preview-feature",
    "studio": "prisma studio",
    "test": "jest",
    "typecheck": "concurrently --raw yarn:typecheck:*",
    "typecheck:app": "tsc --noEmit",
    "typecheck:cypress": "tsc --noEmit -p cypress/tsconfig.json",
    "update:deps": "updates -u && rm -rf node_modules && yarn",
    "cypress:open": "cypress open",
    "starknet:compile": "npx hardhat starknet-compile --disable-hint-validation",
    "starknet:devnet": "starknet-devnet 2> /dev/null &",
    "starknet:devnet-stop": "pkill starknet-devnet || /bin/true",
    "starknet:test": "yarn starknet:compile && yarn starknet:devnet && npx hardhat test && yarn starknet:stop-devnet"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.2",
    "@heroicons/react": "v1",
    "@next-auth/prisma-adapter": "^1.0.4",
    "@pothos/core": "^3.21.0",
    "@pothos/plugin-prisma": "^3.34.0",
    "@pothos/plugin-simple-objects": "^3.5.0",
    "@prisma/client": "^4.3.1",
    "@sendgrid/mail": "^7.7.0",
    "@starknet-react/core": "^0.13.4",
    "@urql/exchange-graphcache": "^5.0.1",
    "@web3auth/sign-in-with-starkware": "^1.0.0",
    "bs58": "^5.0.0",
    "canvas-confetti": "^1.5.1",
    "cookie-session": "^2.0.0",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.2",
    "get-starknet": "^1.5.0",
    "graphql": "^16.6.0",
    "graphql-helix": "^1.13.0",
    "graphql-playground-html": "^1.6.30",
    "graphql-scalars": "^1.18.0",
    "graphql-tag": "^2.12.6",
    "next": "^12.3.1",
    "next-auth": "^4.12.0",
    "next-connect": "^0.13.0",
    "next-themes": "^0.2.1",
    "preact": "^10.11.0",
    "raw-body": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "sha1": "^1.1.1",
    "slug": "^8.0.0",
    "starknet": "^4.4.2",
    "swr": "^1.3.0",
    "urql": "^3.0.3",
    "use-deep-compare-effect": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@boost/module": "^4.0.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@graphql-codegen/cli": "^2.12.2",
    "@graphql-codegen/near-operation-file-preset": "^2.4.1",
    "@graphql-codegen/plugin-helpers": "^2.7.1",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typed-document-node": "^2.3.3",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-urql": "^3.7.0",
    "@next/eslint-plugin-next": "^12.3.1",
    "@shardlabs/starknet-hardhat-plugin": "^0.6.6",
    "@tailwindcss/forms": "^0.5.3",
    "@toruslabs/starkware-crypto": "^1.1.0",
    "@types/common-tags": "^1.8.1",
    "@types/cookie-session": "^2.0.44",
    "@types/d3-chord": "^3.0.1",
    "@types/jest": "^29.0.3",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "@types/slug": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "autoprefixer": "^10.4.12",
    "common-tags": "^1.8.2",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "csstype": "^3.1.1",
    "cypress": "^10.8.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "micro": "^9.4.1",
    "next-prisma-plugin": "^0.1.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "uuid": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "./src/test/jest-setup.ts"
    ],
    "transform": {
      "\\.tsx?$": [
        "babel-jest",
        {
          "configFile": "./.babelrc.jest.js"
        }
      ]
    }
  },
  "prisma": {
    "schema": "src/server/db/schema.prisma"
  }
}
